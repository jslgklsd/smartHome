<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="750dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rg">

        <RadioButton
            android:id="@+id/rb_device"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="设备"
            android:button="@null"
            android:drawableTop="@drawable/device_selector"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/color_selector"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_qingjing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="情景"
            android:button="@null"
            android:drawableTop="@drawable/qingjing_selector"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/color_selector"/>

        <RadioButton
            android:id="@+id/rb_sound"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="声控"
            android:button="@null"
            android:drawableTop="@drawable/sound_selector"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/color_selector"/>

    </RadioGroup>

</LinearLayout>